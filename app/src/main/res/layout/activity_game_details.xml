<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/banner_bg"
    tools:context="com.cninter.a3dgame.GameDetails">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/game_details_img"
            android:layout_width="90dp"
            android:layout_height="130dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="游戏名称: "
                        />
                    <TextView
                        android:id="@+id/game_details_shorttitle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:singleLine="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="游戏类型: "
                        />
                    <TextView
                        android:singleLine="true"
                        android:id="@+id/game_details_typename"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="开发厂商: "
                        />
                    <TextView
                        android:id="@+id/game_details_made_company"
                        android:singleLine="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="发售日期: "
                        />
                    <TextView
                        android:id="@+id/game_details_release_date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:singleLine="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="发售厂商: "
                        />
                    <TextView
                        android:id="@+id/game_details_release_company"
                        android:singleLine="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="官方网站: "
                        />
                    <TextView
                        android:id="@+id/game_details_websit"
                        android:text="@string/game_details"
                        android:singleLine="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="游戏平台: "
                        />
                    <TextView
                        android:singleLine="true"
                        android:id="@+id/game_details_terrace"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>


            </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="主题: "
                android:textSize="20sp"/>
            <TextView

                android:id="@+id/game_details_keywords"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="20sp"
                android:lines="3"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内容: "
                android:textSize="20sp"
               />
            <TextView

                android:id="@+id/game_details_description"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:textSize="20sp"
                android:lines="3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="20sp"

                android:text="作者:  "/>
            <TextView

                android:id="@+id/game_details_writer"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:singleLine="true"/>
        </LinearLayout>



    </LinearLayout>



</LinearLayout>
